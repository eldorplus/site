extends ../layout

block append css
  link(rel="stylesheet",href="/css/map.css")

block content
  div#map-canvas




  div.container

    div.row
      div.col-lg-12
        form(id="geocode",class="form-inline",role="form")

          div.form-group
            .dropdown
              button#screen-menu.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='true')
                | Home Screen
                span.caret
              ul#screen-list.dropdown-menu(role='menu', aria-labelledby='screen-menu')
          div.form-group
            input(id="address",type="textbox",class="form-control",placeholder="Address")
            &nbsp;
            button(class="btn btn-default", id="go")
              span.glyphicon.glyphicon-search
              | &nbsp; Find
          div.form-group
            button(class="btn",data-toggle="collapse",data-target="#notes",aria-expanded="false",aria-controls="collapseNotes")
              span.glyphicon.glyphicon-filter
              | &nbsp; Filter
            &nbsp;
            button(class="btn",id="center")
              span.glyphicon.glyphicon-globe
              | &nbsp; Locate Me
            &nbsp;
            button(class="btn",id="add")
              span.glyphicon.glyphicon-screenshot
              | &nbsp; Center
            &nbsp;
            button(class="btn",id="home")
              span.glyphicon.glyphicon-home
              | &nbsp; Home
            &nbsp;
            button(class="btn",id="directions")
              span.glyphicon.glyphicon-road
              | &nbsp; Directions

      div.col-lg-12
        div#notes(class="collapse")
    div.row
      div.col-lg-12
        div#message.well.well-sm
    div.row
      div.col-md-5
        div#info
      div.col-md-7
        div(data-ng-app="app")
          div#screen(ui-view="")


block append scripts
  script(src="/js/ckeditor/ckeditor.js")
  // script(src="//cdn.ckeditor.com/4.4.7/basic/ckeditor.js")
  script(src="//maps.googleapis.com/maps/api/js?key=AIzaSyBrgK46nY9WqGUPRy3S0MFGNMlbEojkN4U&sensor=false")
  script(src="/js/map-paris.js")
  script(src="/js/angular/locations/app.js")
  script(src="/js/angular/locations/controllers.js")
  script(src="/js/angular/locations/services.js")