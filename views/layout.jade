include includes/mixins

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(name="author",content=config.author)
    if (content)
      +meta_description(content.description)
      +meta_keywords(content.keywords)
      title=content.title ? content.title : "Kyo Suayan | Design + Development"
    block css
      link(rel="stylesheet",href="/css/corelib.css")
      link(rel="stylesheet",href="/css/main.css")
  body

    block header
      include includes/header

    block content

    block footer
      include includes/footer

    block scripts
      script(src="/js/dist/corelib.min.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.runtime.min.js")
      script(src="/js/site.js")
      script.
        gb.ui.mediaHost = "#{config.mediaHost}";
      include includes/gtm