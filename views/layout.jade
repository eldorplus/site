include includes/mixins

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="author",content=config.author)
    if (content)
      +meta_description(content.description)
      +meta_keywords(content.keywords)
      title=content.title ? content.title : "Kyo Suayan | Design + Development"
  body
    block header
      include includes/header
    block content
    block footer
      include includes/footer
    block css
      -if (env==="production")
        link(rel="stylesheet",href="http://cdn.suayan.com/dist/css/corelib.min.css")
        link(rel="stylesheet",href="http://cdn.suayan.com/dist/css/main.min.css")
      -else
        link(rel="stylesheet",href="/css/dist/corelib.css")
        link(rel="stylesheet",href="/css/main.css")
    block scripts
      -if (env==="production")
        script(src="http://cdn.suayan.com/dist/js/all-site.min.js")
      -else
        include includes/dev-scripts
      script.
        gb.ui.mediaHost = "#{config.mediaHost}";
    include includes/gtm