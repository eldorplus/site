extends ../layout

block metadata
  -var description = { name: "description", content: story.description };
  +meta(description)
  -var keywords = { name: "keywords", content: story.keywords };
  +meta(keywords)
  if (story.title)
    title=story.title
  -var og_site = { property: "og:site_name", content:"Kyo Suayan | Design + Development"};
  +meta_og(og_site)
  -var og_title = { property: "og:title", content:(story.title||"Kyo Suayan | Design + Development")};
  +meta_og(og_title)
  -var og_desc = { property: "og:description", content: (story.description||config.description)};
  +meta_og(og_desc)
  -var og_type = { property: "og:type", content: "article"};
  +meta_og(og_type)
  -var og_url = { property: "og:url", content: "http://node.suayan.com/page/"+page};
  +meta_og(og_url)
  -var og_image = { property: "og:image", content: story.image};
  +meta_og(og_image)

block content
  #content
    .container.article
      .row
        .col-sm-12
          include ../includes/body