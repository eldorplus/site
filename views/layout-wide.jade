doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    meta(name="description",content=config.description)
    meta(name="keywords",content=config.keywords)
    meta(name="author",content=config.author)
    title=typeof(title) !== 'undefined' ? title : "site"
    block css
      link(rel="stylesheet",href=config.mediaHost+"/css/external/bootstrap.3.0.2/bootstrap.min.css")
      link(rel="stylesheet",href=config.mediaHost+"/css/external/bootstrap.3.0.2/bootstrap-theme.min.css")
      link(rel="stylesheet",href="/css/main.css")
    block scripts
      script(src="/js/dist/corelib.min.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.runtime.min.js")
      script(src="/js/site.js")
  body
    include includes/header
    block content
    div.footer
      block footer